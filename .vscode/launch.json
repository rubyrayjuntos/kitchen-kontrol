{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server: Node (nodemon)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "presentation": {
        "group": "server"
      }
    },
    {
      "name": "Client: npm start",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": ["run", "start"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "group": "client"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run Full Stack",
      "configurations": ["Server: Node (nodemon)", "Client: npm start"]
    }
  ]
}
